{{!-- HOT BAR --}}
<div class="popGoodsServices">
<h4 class="popTitle">Popular Goods & Services</h4>
{{!-- 1 --}}
  {{#each items as |item|}}
  <div class="row gsCards">
      <div class="card pgCards">
        <a href="/item/{{item.id}}">
          <div class="card-image">
            <img src="https://www.thepuffpack.com/wp-content/uploads/2020/10/mysteryitem.jpg">
            <span><a id="card-title" href="/item/{{item.id}}">{{item.name}}</a></span>
          </div>
        </a>

        <div class="card-content">
          <p>{{item.desc}}</p>
          <p>Posted by {{item.owner.username}}</p>
        </div>
      </div>
  </div>
  {{/each}}

